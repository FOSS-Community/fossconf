---
import { Image } from 'astro:assets';

import Ocd from './logos/ocd.png';
import AssetMantle from './logos/assetmantle.svg';

const partners: any[] = [
  {
    name: 'OCD',
    images: Ocd,
    link: 'https://ocd-india.github.io/',
  },
  {
    name: 'AssetMantle',
    images: AssetMantle,
    link: 'https://www.assetmantle.one/',
  },
];
---

{
  partners.length > 0 ? (
    <section id="partners" class="rows">
      <div>
        <h2>Community Partners</h2>
      </div>
      <div class="partners">
        {partners.map(({ name, images, width, link }) => (
          <a href={link} class="partner-item">
            <Image src={images} width={width} alt={name} />
          </a>
        ))}
      </div>
    </section>
  ) : null
}

<style>
  h2 {
    --stroke-color: var(--red);
  }
  .partners {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    grid-gap: 1rem;
    justify-content: center;
    align-items: center;
  }
  .partner-item {
    margin-bottom: 1rem; /* Add some margin between logos */
  }
  @media screen and (min-width: 768px) {
    .partners {
      justify-content: space-between;
    }
  }
  @media screen and (min-width: 960px) {
    .partners {
      justify-content: space-between;
    }
  }
  img {
    margin: 0;
    height: fit-content;
    max-width: 100%;
    width: fit-content;
  }
</style>

