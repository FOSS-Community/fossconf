---
import Hero from "./_/Hero/index.astro"
import Layout from "@src/layouts/Layout.astro"
import About from "./_/About.astro"
import Schedule from "./_/Schedule/index.astro"
import Keynotes from "./_/Keynotes/index.astro"
import Panelists from "./_/Panelists/index.astro"
import Speakers from "./_/Speakers/speakers.astro"
import Testimonials from "./_/Testimonials/index.astro"
import Sponsors from "./_/Sponsors/index.astro"
import Ticket from "./_/Ticket/index.astro"
import Partners from "./_/Partners/index.astro"
import Organisers from "./_/Organisers/index.astro"
import Volunteers from "./_/Volunteers/index.astro"
import External from "../components/external.svg"
import { schedule, panelists, keynote } from "@src/data/schedules/current"
---

<Layout title="Home">
  <Hero />
  <About />
  <Ticket />
  {Array.isArray(keynote) && keynote.length > 0 ? <Keynotes /> : null}
  {Array.isArray(panelists) && panelists.length > 0 ? <Panelists /> : null}
  <Speakers />
  <Sponsors />
  <Partners />
  <!-- {Array.isArray(schedule.dates) && schedule.dates.length > 0 ? <Schedule /> : null} -->
  <Testimonials />
  <Organisers />
  <Volunteers />
</Layout>

<style>
  hr {
  color: #61bfae4d;
}
</style>
